# Plakar Configuration
PLAKAR_AGENT_SOCKET={{ plakar_agent_socket }}

# Local Repository
LOCAL_REPO_PATH={{ plakar_repositories.local.path }}
LOCAL_REPO_PASSPHRASE={{ vault_backup_local_passphrase }}

# SFTP Repository
SFTP_REPO_PATH={{ plakar_repositories.remote_sftp.path }}
SFTP_REPO_PASSPHRASE={{ vault_backup_sftp_passphrase }}

# S3 Repository  
S3_REPO_PATH={{ plakar_repositories.remote_s3.path }}
S3_REPO_PASSPHRASE={{ vault_backup_s3_passphrase }}
AWS_ACCESS_KEY_ID={{ vault_backup_s3_access_key }}
AWS_SECRET_ACCESS_KEY={{ vault_backup_s3_secret_key }}

# PostgreSQL Configuration
POSTGRES_CONTAINER={{ postgres_container_name }}
POSTGRES_USER={{ vault_postgres_password }}
POSTGRES_PASSWORD={{ vault_postgres_password }}
POSTGRES_DB={{ vault_postgres_db | default('asphub') }}

# MinIO Configuration
MINIO_CONTAINER={{ minio_container_name }}
MINIO_ROOT_USER={{ vault_minio_root_user }}
MINIO_ROOT_PASSWORD={{ vault_minio_root_password }}

# Backup Configuration
BACKUP_RETENTION_DAYS={{ backup_retention_days }}
BACKUP_LOG_FILE={{ backup_log_file }}
BACKUP_METRICS_FILE={{ backup_metrics_file }}

# Paths
POSTGRES_BACKUP_PATH={{ postgres_backup_path }}
MINIO_BACKUP_PATH={{ minio_backup_path }}
MINIO_DATA_PATH={{ minio_data_path }} 