global:
  smtp_smarthost: 'localhost:587'
  smtp_from: 'alertmanager@mchegdali.cloud'

route:
  group_by: ['alertname']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 4h
  receiver: 'discord'

receivers:
- name: 'discord'
  discord_configs:
  - webhook_url: '{{ discord_webhook_url }}'
    send_resolved: true
    title: 'ðŸš¨ AlertManager Notification'
    message: |
      {% raw %}{{ if eq .Status "firing" }}ðŸ”¥ **Alert Firing**{{ else }}âœ… **Alert Resolved**{{ end }}
      
      {{ range .Alerts }}
      **{{ .Annotations.summary }}**
      Description: {{ .Annotations.description }}
      Instance: {{ .Labels.instance }}
      Severity: {{ .Labels.severity }}
      {{ end }}{% endraw %}
    username: 'AlertManager'
    avatar_url: 'https://prometheus.io/assets/prometheus_logo-cb55bb5c346.png'


inhibit_rules:
  - source_match:
      severity: 'critical'
    target_match:
      severity: 'warning'
    equal: ['alertname', 'dev', 'instance']